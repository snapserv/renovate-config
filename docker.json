{
  "extends": [
    "config:base",
    "default:disableRateLimiting",
    "default:automergeDigest",
    "default:automergeMinor",
    "docker:enableMajor",
    "docker:pinDigests"
  ],
  "packageRules": [
    {
      "datasources": ["docker"],
      "packagePatterns": ["^snapserv/"],
      "versioning": "semver"
    },
    {
      "paths": ["+(docker-compose.yml)"],
      "pinDigests": false
    },
    {
      "datasources": ["docker", "repology"],
      "packageNames": ["snapserv/alpine"],
      "packagePatterns": ["^alpine(?:_[^/]+)/"],
      "groupName": "alpine packages",
      "groupSlug": "alpine"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)Dockerfile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=repology depName=alpine/(?<depName>.*?)\\s+ENV .*?_VERSION=\"?(?<currentValue>.*?)\"?\\s"
      ],
      "lookupNameTemplate": "alpine_3_12/{{depName}}",
      "datasourceTemplate": "repology",
      "versioningTemplate": "loose"
    },
    {
      "fileMatch": ["(^|/)Dockerfile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>(?:[^r]|r[^e]|re[^p]|rep[^o]|repo[^l]|repol[^o]|repolo[^g]|repolog[^y]|repology.).*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s+ENV .*?_VERSION=\"?(?<currentValue>.*?)\"?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    }
  ]
}
